{
	"name": "fileselector",
	"displayName": "File Selector",
	"publisher": "vsundin",
	"repository": {
		"type": "git",
		"url": "https://github.com/vsundin/vscode-fileselector.git"
	},
	"icon": "icon.png",
	"description": "",
	"version": "1.1.1",
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebug",
		"onCommand:fileselector.selectfile",
		"onCommand:fileselector.debugselectedfile",
		"onCommand:fileselector.runexternalcmdonselectedfile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"category": "File Selector",
				"command": "fileselector.debugselectedfile",
				"title": "Start Debugging"
			},
			{
				"category": "File Selector",
				"command": "fileselector.runexternalcmdonselectedfile",
				"title": "Run external command"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "fileselector.runexternalcmdonselectedfile"
				},
				{
					"command": "fileselector.debugselectedfile"
				}
			],
			"explorer/context": [
				{
					"command": "fileselector.runexternalcmdonselectedfile"
				},
				{
					"command": "fileselector.debugselectedfile"
				}
			]
		},
		"configuration": [
			{
				"title": "File Selector",
				"category": "fileselector",
				"properties": {
					"fileselector": {
						"type": "object",
						"properties": {
							"file": {
								"properties": {
									"path": {
										"type": "array",
										"default": [
											"C:\\",
											"./"
										],
										"description": "The directory where files of the file format 'fileselector.file.filter' exists",
										"scope": "null"
									},
									"filter": {
										"type": "array",
										"default": [
											"exe",
											"exe"
										],
										"description": "The format of the file to be selected [\".exe\",\".c\",\".o\",...,]. The format in the array needs to match the corresponding file.path",
										"scope": "null"
									}
								}
							},
							"externalCommands": {
								"type": "array",
								"default": [
									{
										"command": "echo",
										"args": [
											"Hello#${relativeFile}#${relativeFileDirname}!"
										]
									}
								],
								"description": "An array of commands of syntax '{ \"command\":\"cmd\",\"args\":[\"argument\"] }' which will be execute on a selected file. The argument array are appended after the filename. The variable ${workspaceFolder} is enabled and will be replaced.",
								"scope": "null"
							},
							"debug": {
								"type": "object",
								"properties": {
									"type": {
										"default": {
											"py": "python",
											"exe": "cppvsdbg"
										},
										"description": "Debugging type, e.g. {'py':'python'} means files of extension 'py' will use the 'python' debugger.",
										"scope": "null"
									}
								}
							}
						},
						"default": {
							"debug": {
								"type": {
									"py": "python",
									"exe": "cppvsdbg"
								}
							},
							"externalCommands": [
								{
									"command": "echo",
									"args": [
										"Hello#${relativeFile}#${relativeFileDirname}!"
									]
								}
							],
							"file": {
								"path": [
									"C:\\",
									"./"
								],
								"filter": [
									"exe",
									"exe"
								]
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.29.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"dependencies": {
		"fs": "0.0.1-security"
	}
}