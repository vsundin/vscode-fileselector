{
	"name": "fileselector",
	"displayName": "File Selector",
	"publisher": "vsundin",
	"repository": {
		"type": "git",
		"url": "https://github.com/vsundin/vscode-fileselector.git"
	},
	"icon": "icon.png",
	"description": "",
	"version": "1.1.2",
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebug",
		"onCommand:fileselector.selectfile",
		"onCommand:fileselector.debugselectedfile",
		"onCommand:fileselector.runexternalcmdonselectedfile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"category": "File Selector",
				"command": "fileselector.debugselectedfile",
				"title": "Start Debugging"
			},
			{
				"category": "File Selector",
				"command": "fileselector.runexternalcmdonselectedfile",
				"title": "Run external command"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "fileselector.runexternalcmdonselectedfile"
				},
				{
					"command": "fileselector.debugselectedfile"
				}
			],
			"explorer/context": [
				{
					"command": "fileselector.runexternalcmdonselectedfile"
				},
				{
					"command": "fileselector.debugselectedfile"
				}
			]
		},
		"configuration": [
			{
				"title": "File Selector",
				"category": "fileselector",
				"properties": {
					"fileselector": {
						"type": "object",
						"properties": {
							"file": {
								"properties": {
									"path": {
										"type": "array",
										"default": [
											"C:\\",
											"./"
										],
										"description": "The directory where files of the file format 'fileselector.file.filter' exists",
										"scope": "null"
									},
									"filter": {
										"type": "array",
										"default": [
											"exe",
											"exe"
										],
										"description": "The format of the file to be selected [\".exe\",\".c\",\".o\",...,]. The format in the array needs to match the corresponding file.path",
										"scope": "null"
									}
								}
							},
							"externalCommands": {
								"type": "array",
								"default": [
									{
										"command": "echo",
										"args": [
											"Hello#${relativeFile}#${relativeFileDirname}!"
										]
									}
								],
								"description": "An array of commands of syntax '{ \"command\":\"cmd\",\"args\":[\"argument\"] }' which will be execute on a selected file. The argument array are appended after the filename. The variable ${workspaceFolder} is enabled and will be replaced.",
								"scope": "null"
							},
							"debug": {
								"type": "object",
								"default": {
									"py": {
										"type": "python",
										"program": "${file}"
									},
									"c": {
										"type": "cppvsdbg",
										"program": "${file}"
									},
									"cpp": {
										"type": "cppvsdbg",
										"program": "${file}"
									},
									"exe": {
										"type": "cppvsdbg",
										"program": "${file}"
									}
								},
								"patternProperties": {
									"^": {
										"type": "object",
										"description": "The file extension settings",
										"properties": {
											"type": {
												"type": "string",
												"default": "python",
												"description": "The type of debugging configuration (same as in launch.json)"
											},
											"program": {
												"type": "string",
												"default": "${file}",
												"description": "Full path to program executable"
											},
											"env": {
												"type": "object",
												"default": "\"PYTHONPATH\":\"${env:PYTHONPATH};${workspaceFolder}\\SystemTest\\PiTest_framework\\piTest\"",
												"description": "Environment variables defined as a key value pair. Property ends up being the Environment Variable and the value of the property ends up being the value of the Env Variable."
											},
											"envFile": {
												"type": "string",
												"default": "${workspaceFolder}/.vscode/path.env",
												"description": "Absolute path to a file containing environment variable definitions. This file has key value pairs separated by an equals sign per line. E.g. KEY=VALUE"
											},
											"cwd": {
												"type": "string",
												"default": "${workspaceFolder}",
												"description": "The working directory of the target."
											}
										},
										"required": [
											"type",
											"program"
										]
									}
								},
								"description": "Debugging settings depending on file extension. The object key is used as selector for the file extension i.e. \"py\":{\"type\":\"python\",\"program\":\"${file}\"}` means file-extension of type 'py' will launch the 'python' debugger and the program which will be debugged is '${file}' i.e. the selected file",
								"scope": "null"
							}
						},
						"default": {
							"debug": {
								"example-extension": {
									"type": "python",
									"program": "${file}",
									"envFile": "${workspaceFolder}/.vscode/path.env",
									"env": {
										"PYTHONPATH": "${env:PYTHONPATH};${workspaceFolder}\\SystemTest\\PiTest_framework\\piTest"
									},
									"cwd": "${workspaceFolder}"
								}
							},
							"externalCommands": [
								{
									"command": "echo",
									"args": [
										"Hello#${relativeFile}#${relativeFileDirname}!"
									]
								}
							],
							"file": {
								"path": [
									"C:\\",
									"./"
								],
								"filter": [
									"exe",
									"exe"
								]
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.29.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"dependencies": {
		"fs": "0.0.1-security"
	}
}